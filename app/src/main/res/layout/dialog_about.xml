<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About This App"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app facilitates seamless file browsing and management by establishing SFTP connections, enabling users to browse, filter, and download files from remote directories effortlessly. It supports advanced filtering options, such as filtering files by name or date, ensuring targeted and efficient file management."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additionally, users can select multiple files and perform bulk downloads with ease. On the GPS data monitoring and parsing front, the app automatically monitors and downloads GPS UBX files from remote directories."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These files are parsed to extract essential GPS data, including latitude, longitude, altitude, fix type, and accuracy metrics. The extracted data is displayed in a dynamic user interface, providing real-time analysis and insights."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- App Version -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: 1.0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Developer Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by: Tushar Nagpure"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- GitHub Link -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub: https://github.com/TusharNagpure/NIO-GPS-Data-Receiver"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:autoLink="web"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
